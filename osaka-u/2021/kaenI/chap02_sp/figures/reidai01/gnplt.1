set terminal tikz
set output "graph.tex"
#
# ... files and functions ...
f="data"
# ... key settings ...
set key spacing 1.5
t1='$M=1$'
# ... range settings ...
set xrange [-3:3]
set yrange [-2:2]
# ... axis label settings ...
set xlabel "$x$" 
set ylabel "$y$"
set xtics 1 
set ytics 1 
# ... ratio and size settings ...
set size 0.5, 0.5
# ... frame settings ...
set border back
set grid lw 2
set border 15 lw 3

set dashtype 1 (3,2)

set arrow 1  from -3,-1 to -2,-1 nohead lw 4 lc rgb "black"
set arrow 2  from -2, 1 to -1, 1 nohead lw 4 lc rgb "black"
set arrow 3  from -1,-1 to  0,-1 nohead lw 4 lc rgb "black"
set arrow 4  from  0, 1 to  1, 1 nohead lw 4 lc rgb "black"
set arrow 5  from  1,-1 to  2,-1 nohead lw 4 lc rgb "black"
set arrow 6  from  2, 1 to  3, 1 nohead lw 4 lc rgb "black"

set arrow 7  from  -2,-1 to  -2, 1 nohead lw 4 dt 1 lc rgb "black"
set arrow 8  from  -1,-1 to  -1, 1 nohead lw 4 dt 1 lc rgb "black"
set arrow 9  from   0,-1 to   0, 1 nohead lw 4 dt 1 lc rgb "black"
set arrow 10 from   1,-1 to   1, 1 nohead lw 4 dt 1 lc rgb "black"
set arrow 11 from   2,-1 to   2, 1 nohead lw 4 dt 1 lc rgb "black"

# ... plot part ...
plot f u 1:2 w l lw 4 lc rgb "red" title t1
